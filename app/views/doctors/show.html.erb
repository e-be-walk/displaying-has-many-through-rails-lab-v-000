<h1><%= @doctor.name %></h1>
<h2><%= @doctor.department %></h2>
<br>
<h3>Appointments: </h3>
  <% @appointments.each do |appointment| %>
  <li><%= appointment.appointment_datetime.strftime("%B %d, %Y") + " at " + appt.appointment_datetime.strftime("%R") %> - <%= link_to appointment.patient.name, patient_path(appointment.patient) %></li>
  <% end %>
